mixin main-slider()

    -var slides = [{before: './assets/images/1before.png', after: './assets/images/1after.png'}, {before: './assets/images/2before.png', after: './assets/images/2after.png'}, {before: './assets/images/3before.png', after: './assets/images/3after.png'}, {before: './assets/images/1before.png', after: './assets/images/1after.png'}, {before: './assets/images/2before.png', after: './assets/images/2after.png'}, {before: './assets/images/3before.png', after: './assets/images/3after.png'}];

    section.splide
    
        .splide__track
            ul.splide__list
                each slide in slides
                    li.splide__slide 
                        .splide__slide-content
                            .image-compare
                                img(src=slide.before)
                                img(src=slide.after)
        
        .splide__arrows
            button.splide__arrow.splide__arrow--prev
                img(src='./assets/images/arrow-left.png')
            button.splide__arrow.splide__arrow--next
                img(src='./assets/images/arrow-right.png')